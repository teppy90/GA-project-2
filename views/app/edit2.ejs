<body>


  <div class="limiter">

    <div class="container-login100">
      <div class="wrap-login1000">
        <form class="login100-form validate-form" action="/books/<%= data._id%>?_method=PUT" method="POST">
          <span class="login100-form-title p-b-26">
            Write your thought
          </span>

          <div class="wrap-input100 validate-input">
            <input id="title" type="text" name="title" value="<%=data.title%>" id="inputdefault" class="validate title ">
          </div>

          <div class="wrap-input100 validate-input" >

            <textarea placeholder="Write your thoughts here" id="data overridebootstrap" style="width: 100%; min-height: 150px; resize: vertical; white-space: pre" name="description" type="text"  class="materialize-textarea" data-length="500">              <%= data.description%>
            </textarea>

          </div>

          <div class="container-login100-form-btn">
            <div class="wrap-login100-form-btn">
              <div class="login100-form-bgbtn"></div>
              <button class="login100-form-btn" type="submit" >
                Add
              </button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>


  <div id="dropDownSelect1"></div>


